<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="SE194087_Nguyễn Xuân Hiệp" Height="200" Width="300">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            Hệ số _a:
        </Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName=txtB}">
            Hệ số _b:
        </Label>
        <TextBox Name="txtB"></TextBox>
        <TextBlock>Kết quả:</TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10" Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://siteoforigin:,,,/Images/sum.png" Width="20" Height="20" />
                    <TextBlock Margin="5,0">Tổng</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10" Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://siteoforigin:,,,/Images/thoat.png" Width="20" Height="20" />
                    <TextBlock Margin="5,0">Thoát</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
